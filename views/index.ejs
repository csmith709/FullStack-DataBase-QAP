<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../styles/style.css">
  <title>SPA Management</title>
</head>
<body>
  <div class="container">
    <header>
      <h1>SPA Management</h1>
    </header>

    <!-- Clients Section -->
<section>
  <h2>Clients</h2>
  <a href="/api/clients/add" class="btn">Add Client</a>
  <ul>
    <% if (clients && clients.length > 0) { %>
      <% clients.forEach(client => { %>
        <li>
          <%= client.client_id %> - <%= client.first_name %> <%= client.last_name %>
          <a href="/api/clients/edit/<%= client.client_id %>" class="btn">Edit</a>
          <a href="/api/clients/delete/<%= client.client_id %>" class="btn">Delete</a>
        </li>
      <% }); %>
    <% } else { %>
      <li>No clients available</li>
    <% } %>
  </ul>
</section>


    <!-- Employees Section -->
<section>
  <h2>Employees</h2>
  <a href="/api/employees/add" class="btn">Add Employee</a>
  <ul>
    <% if (employees && employees.length > 0) { %>
      <% employees.forEach(employee => { %>
        <li>
          <%= employee.employee_id %> - <%= employee.first_name %> <%= employee.last_name %>
          <a href="/api/employees/edit/<%= employee.employee_id %>" class="btn">Edit</a>
          <a href="/api/employees/delete/<%= employee.employee_id %>" class="btn">Delete</a>
        </li>
      <% }); %>
    <% } else { %>
      <li>No employees available</li>
    <% } %>
  </ul>
</section>


    <!-- Appointments Section -->
    <section>
      <h2>Appointments</h2>
      <a href="/api/appointments/add" class="btn">Add Appointment</a>
      <ul>
        <% if (appointments && appointments.length > 0) { %>
          <% appointments.forEach(appointment => { %>
            <li>
              Client: <%= appointment.client_id %>, Service: <%= appointment.service_id %>, Employee: <%= appointment.employee_id %>, 
              Time: <%= new Date(appointment.appointment_time).toLocaleString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
              <a href="/api/appointments/edit/<%= appointment.appointment_id %>" class="btn">Edit</a>
              <a href="/api/appointments/delete/<%= appointment.appointment_id %>" class="btn">Delete</a>
            </li>
          <% }); %>
        <% } else { %>
          <li>No appointments available</li>
        <% } %>
      </ul>
    </section>
  </div>
</body>
</html>