<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/api.js"></script>
  <script src="/js/appointment.js"></script>
  <title>SPA Management</title>
</head>
<body>
  <div class="container">
    <header>
      <h1>SPA Management</h1>
    </header>

    <!-- Clients Section -->
    <section>
      <h2>Clients</h2>
      <a href="/api/clients/add" class="btn">Add Client</a>
      <ul>
        <% clients.forEach(client => { %>
          <li>
            <%= client.first_name %> <%= client.last_name %>
            (<%= client.email %>, <%= client.phone_number %>)
            <a href="/api/clients/edit/<%= client.client_id %>">Edit</a>
            <a href="/api/clients/delete/<%= client.client_id %>">Delete</a>
          </li>
        <% }); %>
      </ul>
    </section>

    <!-- Employees Section -->
    <section>
      <h2>Employees</h2>
      <a href="/api/employees/add" class="btn">Add Employee</a>
      <ul>
        <% employees.forEach(employee => { %>
          <li>
            <%= employee.first_name %> <%= employee.last_name %>
            (<%= employee.email %>, <%= employee.phone_number %>)
            <a href="/api/employees/edit/<%= employee.employee_id %>">Edit</a>
            <a href="/api/employees/delete/<%= employee.employee_id %>">Delete</a>
          </li>
        <% }); %>
      </ul>
    </section>

    <!-- Appointments Section -->
    <section>
      <h2>Appointments</h2>
      <a href="/api/appointments/add" class="btn">Add Appointment</a>
      <ul>
        <% appointments.forEach(appointment => { %>
          <li>
            Client: <%= appointment.client_id %>, 
            Employee: <%= appointment.employee_id %>, 
            Service: <%= appointment.service_id %>, 
            Time: <%= appointment.appointment_time %>
            <a href="/api/appointments/edit/<%= appointment.appointment_id %>">Edit</a>
            <a href="/api/appointments/delete/<%= appointment.appointment_id %>">Delete</a>
          </li>
        <% }); %>
      </ul>
    </section>
  </div>
</body>
</html>
